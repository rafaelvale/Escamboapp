

                        <h1 class="page-header">Administradores</h1>
                            <% if @admins.errors.any? %>
                                <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <ul>
                                <% @admins.errors.full_messages.each do |message| %>
                                <li><%=message%></li>
                                <%end%>
                                </ul>
                            </div>
                            <% end %>
                        <div class="panel panel-default">
                          
                        <%= action %>
                            </div>
                                <div class="panel-body">
                                    <div class="col-lg-6">
                                        <%= form_for([:backoffice, @admins]) do |f| %>
                                            <div class="form-group">
                                                <label>Nome</label>
                                                <%= f.text_field :name, class:"form-control", placeholder:"Nome do administrador"%>
                                            </div>
                                            <div class="form-group">
                                                <label>Email</label>
                                                <%= f.text_field :email, class:"form-control", placeholder:"Email do administrador"%>
                                            </div>
                                            <div class="form-group">
                                                <label>Senha</label>
                                                <%= f.password_field :password, class:"form-control", placeholder:"Senha"%>
                                            </div>
                                            <div class="form-group">
                                                <label>Confirmação da Senha</label>
                                                <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirmação de senha"%>
                                            </div>
                                            <button type="submit" class="btn btn-default">Salvar</button>
                                        <% end %>
                                    <div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
              
