<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sign up</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name, role:"form")) do |f| %>
                          <%= devise_error_messages! %>
                            <fieldset>
                                <div class="form-group">
                                    
                                        <%= f.label :email %><br />
                                        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"E-mail", type:"email", autocomplete: "email" %>
                                </div>
                                <div class="form-group">
                                        <%= f.label :password %>
                                        <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, autocomplete: "off", class:"form-control", name:"password", type:"password" %>
                                </div>
                                <div class="form-group">
                                     <%= f.label :password_confirmation %><br />
                                     <%= f.password_field :password, autocomplete: "off", class:"form-control", name:"password", type:"password"  %>
                                </div>
                                <%= f.submit "Sign up" %>

                            </fieldset>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
